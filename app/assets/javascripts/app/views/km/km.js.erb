(function(){
	$(function(){
		app.km = {};
		$.extend(app.km, {
			parent: app,
			root: null,
			view: null,
			container: null,
			config: null,
			lang: null,
			req: null,
			km: {},
			init: function(){
				this.initRoot();
				this.initView();
				this.initConfig();
				this.initLang();
				this.initContainer();
			},
			initLang: function(){
				this.lang = lang.views.km;
			},
			initConfig: function(){
				this.config = config.views.km;
			},
			initContainer: function(){
				this.container = this.root.wrapper.find('#km');
			},
			initRoot: function(){
				this.root = this.parent.root;
			},
			initView: function(){
				this.view = this;
			},
			ready: function(){
				var km = this.root.selections.km;
				this.loadKm(km);
			},
			abort: function(){
				if(this.req != null) this.req.abort(); 
			},
			kmChange: function(){
				if(this.chart != null){
					this.chart.setElement(null);
					this.chart.hide();
				}
				if(this.elements != null){
					this.elements.setActive(null);
				}
			},
			loadKm: function(which){
				var _self = this;
				this.kmChange();
				this.abort();
				$.extend(this.km, which);
				this.req = this.root.api_client.load({
					key: 'show_km',
					data: {
						km_id: this.km.id
					},
					success: function(data){
						_self.success(data);
					}
				});
			},
			getKmLink: function(){
				var link = null;
				var link_base = unescape(config.server.paths.show);
				var parts = this.km.full_slug.split('/');
				if(parts.length == 3){
					link = link_base
						.replace('%{country}', parts[0])
						.replace('%{city}', parts[1])
						.replace('%{km}', parts[2])
					;
				}
				return link;
			},
			success: function(data){
				//TODO
				if(data && data.km){
					$.extend(this.km, data.km);
					this.map.setLocation({ lat: this.km.lat, lng: this.km.lng });
					this.panel.update();
					this.elements.update();
					this.share.update();
				}
			}
		});
		app.km.init();
	});
})(jQuery);